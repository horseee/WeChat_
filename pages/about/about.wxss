/* pages/about/about.wxss */
.container{
    display: flex;
    flex-direction:column;
    align-items: center;
}

.avatar{
    width:175rpx;
    height:175rpx;
    border-radius: 80%;
}

.level-container{
    margin-top: 45rpx;
}

.place{
    font-size: 25rpx;
    margin-right: 10rpx;
}

.location-icon{
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx ;
}

.name-container{
    font-size:36rpx;
    margin-top: 35rpx
}

.place-container{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 25rpx;
}

.divide-line{
    height: 120rpx;
    width: 80%;
    border-bottom: 2px solid #ededed;
    border-top: 2px solid #ededed;
    margin-top: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.like-box {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
}

.list-number{
    font-size: 40rpx;
    font-weight: 20;
    text-align: center;
}

.list-type{
    font-size: 20rpx;
    font-weight: 15;
    color: #929292;
}

/**photo-list**/
.block-list {
  display: flex;
  flex-direction: column;
  margin-top: 15px;
}

.image-list {
  margin-left: 30px;
  margin-right: 30px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.image-album {
  width: 200rpx;
  height: 200rpx;
  margin-left: 2px;
}

.info-list {
  display: flex;
  flex-direction: row;
  margin-left:30rpx;
  align-items:center;
  justify-content: space-between;
}

.info-left-list {
  display: flex;
  flex-direction: row;
  margin-left:30rpx;
  align-items:center;
}

.name {
  color: #919191;
  font-style: bold;
  margin-left: 10rpx;
  font-size: 28rpx;
}

.date{
  color: #919191;
  margin-left: 10rpx;
  font-size: 20rpx;
}

.head-portrait-list{
  width:75rpx;
  height:75rpx;
  border-radius: 50%;
}

.detail-list{
  margin:0 60rpx 0 60rpx;
  font-size: 24rpx;
  font-family: Microsoft YaHei;
  color: #919191;
}

.tool-item{
  margin-right: 50rpx;
}

/**like**/
.tool-item image{
  height: 30rpx;
  width:30rpx;
  margin-right: 10rpx;
}

page{
    background-color:#fff;
}


