<!--index.wxml-->
<!--焦点图-->
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
<block wx:for="{{focus}}">
  <swiper-item>
  <image src="{{item.images}}" mode="aspectFit"></image>
  </swiper-item>
</block>
</swiper>

<!--最新内容-->
<view class="block-list" wx:for="{{focus}}">
  <navigator url="/pages/view/view?id={{item.id}}">
    <image class="news-list" src="{{item.images}}"></image>
    <view class="info-list">{{item.title}}</view>
  </navigator>
</view>