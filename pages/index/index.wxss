/**index.wxss**/

/**search**/
.search {
  margin-top: 15rpx;
  background-color: #f2f2f2;
  height: 60rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}

.search-img {
  margin: auto 40rpx auto 0;
}

.result-list{
  display: flex;
  flex-direction: row;
  align-content: center;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.search-image-list{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.search-result-name{
  font-size: 32rpx
}

.search-result-info-box{
  display: flex;
  flex-direction: column;
  margin-left: 40rpx
}

.search-result-info-text{
  font-size: 26rpx;
  color: #919191;
}

.search-button{
  font-size: 30rpx;

}

.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.search-panel{
    position:absolute;
    top:80rpx;
}

.xx-img{
    height: 30rpx;
    width: 30rpx;
    margin:auto 0 auto 10rpx;
}


/**focus swipper**/
.swipper-focus {
  width: 640rpx;
  height: 400rpx;
  margin: 0 auto;
  margin-top: 36rpx;
  border-radius: 6rpx;
  -webkit-box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.5);
  background: #fff;
}

/**tab swipper**/
.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color:white;
  margin-top: 5rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 30%;
  color: #777;
  border-bottom: 0rpx;
  margin-left: 30rpx;
  margin-right:30rpx;
}

.on {
  color: #a0b6c9;
  border-bottom: 2rpx solid #a0b6c9;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

/**photo-list**/
.block-list {
  display: flex;
  flex-direction: column;
  margin-top: 15px;
}

.image-list {
  margin-left: 30px;
  margin-right: 30px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.image-album {
  width: 200rpx;
  height: 200rpx;
  margin-left: 2px;
}

.info-list {
  display: flex;
  flex-direction: row;
  margin-left:30rpx;
  align-items:center;
  justify-content: space-between;
}

.info-left-list {
  display: flex;
  flex-direction: row;
  margin-left:30rpx;
  align-items:center;
}

.like-count-text{
  font-size: 28rpx;
  color: #919191;
}

.name {
  color: #919191;
  font-style: bold;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.date{
  color: #CCC;
  margin: auto 20rpx;
  font-size: 28rpx;
}

.head-portrait-list{
  width:75rpx;
  height:75rpx;
  border-radius: 50%;
}

.detail-list{
  margin:0 0rpx 0 80rpx;
  font-size: 32rpx;
  font-family: Microsoft YaHei;
  color: #919191;
}

.tool-item{
  margin-right: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.divide-line{
  width: 80%;
  border-bottom: 1px solid #ededed;
  margin: 15rpx auto;
}

/**like**/
.tool-item image{
  height: 30rpx;
  width:30rpx;
  margin-right: 10rpx;
}