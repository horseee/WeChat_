/* pages/share/share.wxss */
.block-list {
  display: flex;
  flex-direction: column;
  margin-top: 15px;
}

.image-list {
  margin-left: 30px;
  margin-right: 30px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.image-album {
  width: 200rpx;
  height: 200rpx;
  margin-left: 2px;
}

.info-list {
  display: flex;
  flex-direction: row;
  margin-left:30rpx;
  align-items:center;
  justify-content: space-between;
}

.info-left-list {
  display: flex;
  flex-direction: row;
  margin-left:30rpx;
  align-items:center;
}

.like-count-text{
  font-size: 28rpx;
  color: #919191;
}

.name {
  color: #919191;
  font-style: bold;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.date{
  color: #CCC;
  margin: auto 20rpx;
  font-size: 28rpx;
}

.head-portrait-list{
  width:75rpx;
  height:75rpx;
  border-radius: 50%;
}

.detail-list{
  margin:0 0rpx 0 80rpx;
  font-size: 32rpx;
  font-family: Microsoft YaHei;
  color: #919191;
}

.tool-item{
  margin-right: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.divide-line{
  width: 80%;
  border-bottom: 1px solid #ededed;
  margin: 15rpx auto;
}

/**like**/
.tool-item image{
  height: 30rpx;
  width:30rpx;
  margin-right: 10rpx;
}