/* pages/view/view.wxss */
.de-container {
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  width: 95%
}

.album-list{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 50rpx;
}


.title {
  font-size: 20px;
  letter-spacing: 2px;
  color: #4b556c;
  margin-left: 15rpx;
}

.text-container{
  width:85%;
  margin-top: 30rpx;
}

.detail-container{
  width:95%;
  margin-top: 30rpx;
}

.author-date {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  align-items: center;
  justify-content: space-between;
  font-size:13px;
}

.author-box {
  display:flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
}

.author {
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.date {
  color: #919191;
  margin-right: 38rpx;
}

.detail {
  color: #666;
  margin: 40rpx 22rpx 0;
  line-height: 44rpx;
  letter-spacing: 1px;
  font-size:14px;
}

.tool{
  height: 64rpx;
  margin: 60rpx 28rpx 20rpx 0;
  display: flex;
  justify-content: center;
}
.tool-item{
  align-items: center;
  margin-right: 30rpx;
  display: flex;
}

tool-item:last-child{
  margin-right: 0rpx;
}

.tool-item image{
  height: 30rpx;
  width:30rpx;
  margin-right: 10rpx;
}

.like-class{
  font-size: 32rpx;
}
